<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<record id="view_move_form_geo_location" model="ir.ui.view">
    <field name="name">account.move.form.geo.location</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
        <!-- Add below the totals box -->
        <xpath expr="//field[@name='narration']" position="after">
            <group string="Invoice Location Info" >

                    <field name="geo_latitude"/>
                    <field name="geo_longitude"/>
                <field name="create_date"/>
                <field name="geo_city"/>
                <field name="geo_region"/>
                <field name="geo_country"/>
            </group>
        </xpath>
    </field>
</record>
</odoo>